{% extends 'base.html.twig' %}

{% block body %}
    <div class="white-container narrow-container">
        <div class="orange-header">
            <div class="list-text-container">Типы размещений</div>
            <div class="list-button-container "><a class="colorbox-ajax-form" href="{{ path('adservices_new') }}">+</a></div>
        </div>
        <div class="services-list">
            {% for service in adServices %}  
                <div class="services-item block indent-item underlined-block">
                    <div class="services-about list-text-container">
                        <div class="services-text">
                            <a  class="black-href" onclick="$('#services-list-{{loop.index}}').toggleClass('hidden')">
                                {{service.services}}
                            </a>
                        </div>
                        <div class="services-text">
                            <span class="opacity-text">Цена:</span>{{ service.price }}
                        </div>
                        <div class="services-text hidden services-description" id="services-list-{{loop.index}}">                        
                            <span class="opacity-text">Описание:</span>{{ service.description }}
                        </div>
                    </div>
                    <div class="list-button-container">
                        <a class="colorbox-ajax-form" href="{{ path('adservices_edit', { 'idServices': service.idServices })}}">
                            <img class="edit-image"src="{{asset('bundles/app/img/edit.png')}}">
                        </a>
                    </div>

                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}
