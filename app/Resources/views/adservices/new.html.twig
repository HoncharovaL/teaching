<div class="popup services-edit">
    <div class="orange-header text-center">
        <div class="text">Редактировать</div>
    </div>
    <div class="popup-content text-center form-horizontal">
        {{ form_start(form, {'action':path('adservices_new')}) }}
        <div class="services-main">
            {{ form_widget(form.services, {'attr':{'placeholder':"Название услуги"}}) }}
            {{ form_widget(form.price, {'attr':{'placeholder':"Цена"}}) }}
        </div>
        <div class="services-description full-size-field">
            {{ form_widget(form.description, {'attr':{'placeholder':"Описание"}}) }}
        </div>
        <input class="green-submit right" type="submit" value="Сохранить" />
        {{ form_end(form) }}
    </div>

</div>
