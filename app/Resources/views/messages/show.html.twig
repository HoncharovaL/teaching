{% extends 'base.html.twig' %}

{% block body %}
    <div class="correspondence-container">
        <div class="orange-header text-center">
            Переписка
        </div>
        <div class="messages-container">
            {% for message in messages %}
                <div class="messages-item  underlined-block">                   
                    <div class="{{message.sender.id==app.user.id ? 'right-message' : 'left-message'}}">

                        <div class="messages-photo message-block ">
                            {% if message.sender.photo %}
                                <img src="{{photo_path}}{{message.sender.photo}}">
                            {% else %}
                                <img src="{{ asset('bundles/app/img/no-img.png') }}">
                            {% endif %}
                        </div>
                        <div class="message-block" >
                            <div class="message-data message-sender main-info">
                                {{ message.sender }}
                            </div>  
                            <div class="message-data message-content gray-div">
                                {{ message.message }}
                            </div>  
                            <div class="opacity-text message-data main-info">
                                {{ message.dateMes|date('Y-m-d') }}
                            </div>
                        </div>
                    </div>

                </div>
            {% endfor %}
        </div>
        <div class="messages-container">
            {{ form_start(edit_form)}}
            <div class='messages-item underlined-block'>                        
                <div class="form-horizontal">
                    <div class="opacity-text text-center">Отправить сообщение пользователю:</div>
                    <div class="review-comment full-size-field">{{ form_widget(edit_form.message)}}</div>
                </div>
                <div class="buttons-container">
                    <div class="text-center">
                        <input class="save-button" type="submit" value="Отправить" />
                    </div>
                </div>
            </div>
            {{ form_end(edit_form) }}
        </div> 
    </div>



{% endblock %}
