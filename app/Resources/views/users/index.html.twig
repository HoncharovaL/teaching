{% extends 'base.html.twig' %}

{% block body %}
    <h1>Users list</h1>

    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Patronymic</th>
                <th>Surname</th>
                <th>Login</th>
                <th>Password</th>
                <th>Email</th>
                <th>Rating</th>
                <th>Regdate</th>
                <th>Photo</th>
                <th>Phone</th>
                <th>About</th>
                <th>Iduser</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td><a href="{{ path('users_show', { 'idUser': user.idUser }) }}">{{ user.name }}</a></td>
                <td>{{ user.patronymic }}</td>
                <td>{{ user.surname }}</td>
                <td>{{ user.login }}</td>
                <td>{{ user.password }}</td>
                <td>{{ user.email }}</td>
                <td>{{ user.rating }}</td>
                <td>{% if user.regdate %}{{ user.regdate|date('Y-m-d') }}{% endif %}</td>
                <td>{{ user.phone }}</td>
                <td>{{ user.about }}</td>
                <td>{{ user.idUser }}</td>
                <td> <img src="{{photo_path}}{{user.photo}}" alt="user" style="width:304px;height:228px;"> </td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('users_show', { 'idUser': user.idUser }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('users_edit', { 'idUser': user.idUser }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('users_new') }}">Create a new user</a>
        </li>
    </ul>
{% endblock %}
