{% extends 'base.html.twig' %}

{% block body %}
    <div class="narrow-container white-container">
        {{ form_start(form) }}
        <div class="orange-header text-center">
            Создание
        </div>
        <div class="ad-edit-content">
            <div class="ad-row">
                <div class="left-block">
                    Предмет
                </div>
                <div class="right-block">
                    {{ form_widget(form.subject) }}
                </div>
            </div>
            <div class="ad-row form-horizontal underlined-block">                
                <div class="full-size-field">
                    {{ form_widget(form.adText) }}
                </div>
            </div>

            <div class="ad-row">
                <div class="left-block">
                    Область
                </div>
                <div class="right-block">
                    {{ form_widget(form.region) }}
                </div>
            </div>
            <div class="ad-row">
                <div class="left-block">
                    Город
                </div>
                <div class="right-block">
                    {{ form_widget(form.town) }}
                </div>
            </div>
            <div class="ad-row underlined-block">
                <div class="left-block">
                    Район
                </div>
                <div class="right-block">
                    {{ form_widget(form.area) }}
                </div>
            </div>
            <div class="ad-row">
                <div class="left-block">
                    Место проведения
                </div>
                <div class="right-block">
                    {{ form_widget(form.place) }}
                </div>
            </div>
            <div class="ad-row underlined-block">
                <div class="left-block">
                    Онлайн-уроки
                </div>
                <div class="right-block">
                    {{ form_widget(form.online) }}
                </div>
            </div>
            <div class="ad-row">
                <div class="left-block">
                    Цена
                </div>
                <div class="right-block edit-price">
                    {{ form_widget(form.price) }}{{ form_widget(form.currency) }}
                </div>
            </div>
            <div class="ad-row underlined-block">
                <div class="left-block">
                    Время
                </div>
                <div class="right-block edit-durability">
                    {{ form_widget(form.durability) }}{{ form_widget(form.value) }}
                </div>
            </div>

            <div class="ad-row underlined-block">
                <div class="left-block">
                    Тип размещения
                </div>
                <div class="right-block">
                    {{ form_widget(form.services) }}
                </div>
            </div>
            <div class="buttons-container">
                <div class="right">                    
                    <input class="save-button" type="submit" value="Создать" />
                </div>
            </div>
        </div>
        {{ form_end(form) }}
    </div>
{% endblock %}
