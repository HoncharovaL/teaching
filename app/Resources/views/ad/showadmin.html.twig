{% extends 'base.html.twig' %}

{% block body %}
    <div class='ad-full-container wide-container'>
        <div class="block">
            <div class='photo-block left-block image-with-overlay-label'>
                <span class="overlay-label">{{ ad.user.rating }}</span>
                {% if ad.user.photo %}
                    <img src="{{photo_path}}{{ad.user.photo}}">
                {% else %}
                    <img src="{{ asset('bundles/app/img/no-img.png') }}">
                {% endif %}
                {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                    <div class='teacher-phone'>{{ ad.user.phone }}</div>
                {%endif%}
            </div>
            <div class='info-block white-container short-block right-block'>
                <div class='ad-head'>
                    <div class='left-block'>
                        <div class="teacher-name"><a href="{{path('user_show', {'id': ad.user.id})}}">{{ ad.user }}</a></div>
                        <div class="ad-subject">{{ ad.subject}}</div>
                    </div>
                    <div class='right-block'>
                        <div class='ad-date'>{% if ad.adate %}{{ ad.adate|date('d-m-Y') }}{% endif %}</div>
                    </div>
                </div>
                <div>
                    <div class='teacher-content'>
                        {{ ad.user.about }}
                    </div>
                    <div class='teacher-footer'>
                        <div class='teacher-education cell'>
                            {{ ad.user.education }}
                        </div>
                        <div class='teacher-university cell'>
                            {{ ad.user.university }}
                        </div>
                        <div class='teacher-experience cell'>
                            {{ ad.user.experience }}
                        </div>
                    </div>

                    <div class='ad-content'>
                        {{ ad.adText }}
                    </div>
                    <div class="text-buttons">
                        {{ form_start(confirm_form) }}
                        <button type="submit" class="green-href left-block" >
                            <div class="left-block"><img class="sent-image" src="{{asset('bundles/app/img/sent.png')}}"/></div>
                            <div class="left-block">Опубликовать</div>
                        </button>
                        {{ form_end(confirm_form) }}
                        {{ form_start(correct_form) }}
                        <button type="submit" class="yellow-href left-block" >
                            <div class="left-block"><img class="back-image" src="{{asset('bundles/app/img/back.png')}}"/></div>
                            <div class="left-block">Вернуть на корректировку</div>
                        </button>
                        {{ form_end(correct_form) }}
                        {{ form_start(delete_form) }}
                        <button type="submit" class="red-href left-block" >
                            <div class="left-block"><img class="delete-image" src="{{asset('bundles/app/img/delete.png')}}"/></div>
                            <div class="left-block">Удалить</div>
                        </button>
                        {{ form_end(delete_form) }}
                    </div> 
                    <div class='ad-footer'>
                        <div class='ad-place cell'>
                            <div class='ad-town'>{{ ad.town }}</div>
                            <div class='ad-area'>{{ ad.area }}</div>
                        </div>
                        <div class='ad-type cell'>
                            {{ ad.place }}
                        </div>
                        <div class='ad-online cell'>
                            Уроки online
                            {% if ad.online==1%}
                                <img class="yes-no-image" src="{{ asset('bundles/app/img/yes.png') }}">
                            {%else%}
                                <img class="yes-no-image" src="{{ asset('bundles/app/img/no.png') }}">
                            {%endif%}
                        </div>
                        <div class='ad-price cell'>
                            {{ ad.price }} {{ ad.currency }}/{{ ad.durability }}{{ ad.value }}
                        </div>

                    </div>

                </div>

            </div>
        </div>
    </div>
</div>
{% endblock %}
