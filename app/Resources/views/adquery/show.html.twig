
<div class="adquery-edit">
    <div class="popup">
        <div class="popup-header">
            <div class="text">Запрос на подверждение</div>
        </div>
        <div class="popup-content">
            <div class="messages-item">
                <div class="block">
                    <div class="left-block messages-photo">
                        {% if adQuery.user.photo %}
                            <img src="{{photo_path}}{{adQuery.user.photo}}" >
                        {%else%}
                            <img src="{{ asset('bundles/app/img/no-img.png') }}" >
                        {%endif%}
                    </div>
                    <div class="left-block messages-content">
                        <div class="user-name opacity-text message-row">{{ adQuery.user }}</div>
                        <div class="query-text message-row">{{ adQuery.queryText }}</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="text-buttons">
            {{ form_start(confirm_form) }}
            <button type="submit" class="green-href right-block" >
                <div class="left-block"><img class="yes-no-image" src="{{asset('bundles/app/img/yes.png')}}"/></div>
                <div class="left-block">Подтвердить</div>
            </button>
            {{ form_end(confirm_form) }}
            {{ form_start(delete_form) }}
            <button type="submit" class="red-href left-block" >
                <div class="left-block"><img class="yes-no-image" src="{{asset('bundles/app/img/no.png')}}"/></div>
                <div class="left-block">Отклонить</div>
            </button>
            {{ form_end(delete_form) }}
        </div>
        
    </div>
</div>



