{% extends 'base.html.twig' %}

{% block body %}
            

            
            <h1>Объявления</h1>

    <table>
        <tbody>
        {% for ad in ads %}
            <tr>
                <td><a href="{{ path('ad_show', { 'idAd': ad.idAd }) }}">{% if ad.adate %}{{ ad.adate|date('Y-m-d') }}{% endif %}</a></td>
                <td>{{ ad.adText }}</td>
                <td>{{ ad.price }}</td>
                <td>{{ ad.currency }}</td>
                <td>{{ ad.durability }}</td>
                <td>{{ ad.value }}</td>
                <td>{{ ad.user }}</td>
                <td>{{ ad.subject}}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}