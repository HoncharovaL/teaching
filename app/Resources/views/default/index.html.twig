{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <div class="header-bottom">
            <div class="howsmart-head">
                <div>HOWSMART.UA</div>
                <div>Лучшие репетиторы Украины</div>                
            </div>
            <div class="howsmart-about">
                <div>Нужен репетитор?</div>
